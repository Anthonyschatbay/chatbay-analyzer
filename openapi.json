{
  "openapi": "3.1.0",
  "info": {
    "title": "Chatbay Analyzer API",
    "version": "5.3.2",
    "description": "Chatbay Analyzer — Flask + GPT-4o Vision system for automating eBay CSV creation. Fetches grouped image sets from chatbay.site, analyzes them visually, and generates verified, SEO-optimized, eBay-compliant listings as JSON preview or downloadable CSV. Supports comma-separated photo URLs, business policy defaults, and full ChatGPT Action integration."
  },
  "servers": [
    { "url": "https://chatbay-analyzer.onrender.com" }
  ],
  "paths": {
    "/health": {
      "get": {
        "summary": "Check API status and environment",
        "operationId": "get_health_status",
        "responses": {
          "200": {
            "description": "Service health information",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ok": { "type": "boolean" },
                    "service": { "type": "string" },
                    "version": { "type": "string" },
                    "source": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },

    "/openapi.json": {
      "get": {
        "summary": "Serve this OpenAPI definition",
        "operationId": "serve_openapi_json",
        "responses": {
          "200": {
            "description": "Returns the OpenAPI schema used by ChatGPT Actions.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "openapi": { "type": "string" },
                    "info": { "type": "object" },
                    "paths": { "type": "object" }
                  }
                }
              }
            }
          }
        }
      }
    },

    "/gallery": {
      "get": {
        "summary": "Fetch grouped image sets from chatbay.site gallery API",
        "operationId": "get_gallery_groups",
        "servers": [
          { "url": "https://chatbay.site/wp-json/chatbay/v1" }
        ],
        "responses": {
          "200": {
            "description": "Returns grouped product photo sets (comma-separated URLs per product).",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "total_images": { "type": "integer" },
                    "total_groups": { "type": "integer" },
                    "groups": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "photo_urls": {
                            "type": "string",
                            "description": "Comma-separated URLs for one product listing."
                          },
                          "preview": {
                            "type": "string",
                            "description": "Base64-encoded thumbnail preview."
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },

    "/preview_csv": {
      "get": {
        "summary": "Preview first two analyzed listings (JSON only)",
        "operationId": "preview_csv",
        "parameters": [
          {
            "name": "photos_per_item",
            "in": "query",
            "required": true,
            "schema": { "type": "integer", "minimum": 1, "maximum": 12 },
            "description": "Number of photos per listing (1–12)."
          },
          {
            "name": "condition",
            "in": "query",
            "required": true,
            "schema": { "type": "string", "enum": ["new", "preowned", "parts"] },
            "description": "Item condition."
          }
        ],
        "responses": {
          "200": {
            "description": "JSON preview of the first two listings following eBay v5.3 format.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "preview_count": { "type": "integer" },
                    "photos_per_item": { "type": "integer" },
                    "condition": { "type": "string" },
                    "rows": {
                      "type": "array",
                      "items": { "type": "object" }
                    }
                  }
                }
              }
            }
          },
          "400": { "description": "Missing required query parameters." }
        }
      }
    },

    "/export_csv": {
      "get": {
        "summary": "Generate and download complete eBay-ready CSV",
        "operationId": "export_csv",
        "parameters": [
          {
            "name": "photos_per_item",
            "in": "query",
            "required": true,
            "schema": { "type": "integer", "minimum": 1, "maximum": 12 },
            "description": "Number of photos per listing (1–12)."
          },
          {
            "name": "condition",
            "in": "query",
            "required": true,
            "schema": { "type": "string", "enum": ["new", "preowned", "parts"] },
            "description": "Item condition."
          }
        ],
        "responses": {
          "200": {
            "description": "Returns downloadable CSV file with all listings (comma-separated photo URLs).",
            "content": {
              "text/csv": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              }
            }
          },
          "400": { "description": "Missing parameters." },
          "500": { "description": "CSV generation failed or incomplete analysis." }
        }
      }
    }
  },

  "x-chatgpt": {
    "actions": [
      {
        "name": "preview_csv",
        "description": "Preview analyzed listings before generating the full CSV file.",
        "parameters": {
          "photos_per_item": {
            "type": "integer",
            "description": "Number of photos per product item (1–12)."
          },
          "condition": {
            "type": "string",
            "enum": ["new", "preowned", "parts"],
            "description": "Item condition."
          }
        }
      },
      {
        "name": "export_csv",
        "description": "Generate and download the complete eBay-compliant CSV file.",
        "parameters": {
          "photos_per_item": {
            "type": "integer",
            "description": "Number of photos per product item (1–12)."
          },
          "condition": {
            "type": "string",
            "enum": ["new", "preowned", "parts"],
            "description": "Item condition."
          }
        }
      }
    ]
  }
}
