{
  "openapi": "3.1.0",
  "info": {
    "title": "Chatbay Analyzer API",
    "version": "5.3.2",
    "description": "Chatbay Analyzer — Flask + GPT-4o Vision system for automating eBay CSV creation. Fetches grouped image sets from chatbay.site, analyzes them visually, and generates verified, SEO-optimized, eBay-compliant listings as JSON preview or downloadable CSV. Supports comma-separated photo URLs, business policy defaults, and full ChatGPT Action integration."
  },
  "servers": [
    {
      "url": "https://chatbay-analyzer.onrender.com",
      "description": "Production API server for Chatbay Analyzer"
    }
  ],
  "paths": {
    "/health": {
      "get": {
        "summary": "Check API status and environment",
        "operationId": "get_health_status",
        "responses": {
          "200": {
            "description": "Service health information",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ok": { "type": "boolean" },
                    "service": { "type": "string" },
                    "version": { "type": "string" },
                    "source": { "type": "string" }
                  }
                },
                "examples": {
                  "example": {
                    "value": {
                      "ok": true,
                      "service": "chatbay-analyzer",
                      "version": "5.3.2",
                      "source": "render-prod"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/openapi.json": {
      "get": {
        "summary": "Serve this OpenAPI definition",
        "operationId": "serve_openapi_json",
        "responses": {
          "200": {
            "description": "Returns the OpenAPI schema used by ChatGPT Actions.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "openapi": { "type": "string" },
                    "info": { "type": "object" },
                    "paths": { "type": "object" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/gallery": {
      "get": {
        "summary": "Fetch grouped image sets from chatbay.site gallery API",
        "operationId": "get_gallery_groups",
        "servers": [
          {
            "url": "https://chatbay.site/wp-json/chatbay/v1",
            "description": "WordPress gallery source endpoint"
          }
        ],
        "responses": {
          "200": {
            "description": "Returns grouped product photo sets (comma-separated URLs per product).",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "total_images": { "type": "integer" },
                    "total_groups": { "type": "integer" },
                    "groups": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "photo_urls": {
                            "type": "string",
                            "description": "Comma-separated URLs for one product listing."
                          },
                          "preview": {
                            "type": "string",
                            "description": "Base64-encoded thumbnail preview."
                          }
                        }
                      }
                    }
                  },
                  "example": {
                    "total_images": 24,
                    "total_groups": 6,
                    "groups": [
                      {
                        "photo_urls": "https://chatbay.site/ebay-media/item1a.jpg,https://chatbay.site/ebay-media/item1b.jpg,https://chatbay.site/ebay-media/item1c.jpg,https://chatbay.site/ebay-media/item1d.jpg",
                        "preview": "iVBORw0KGgoAAAANSUhEUg..."
                      }
                    ]
                  }
                }
              }
            }
          }
        }
      }
    },
    "/preview_csv": {
      "get": {
        "summary": "Preview first two analyzed listings (JSON only)",
        "operationId": "preview_csv",
        "parameters": [
          {
            "name": "photos_per_item",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer",
              "minimum": 1,
              "maximum": 12,
              "example": 4
            },
            "description": "Number of photos per listing (1–12)."
          },
          {
            "name": "condition",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "enum": ["new", "preowned", "parts"],
              "example": "new"
            },
            "description": "Item condition (new, preowned, or parts)."
          }
        ],
        "responses": {
          "200": {
            "description": "JSON preview of the first two listings following eBay v5.3 format.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "preview_count": { "type": "integer" },
                    "photos_per_item": { "type": "integer" },
                    "condition": { "type": "string" },
                    "rows": {
                      "type": "array",
                      "items": { "type": "object" }
                    }
                  }
                },
                "example": {
                  "preview_count": 2,
                  "photos_per_item": 4,
                  "condition": "new",
                  "rows": [
                    {
                      "Title": "Vintage Champion Reverse Weave Sweatshirt USA Made XL",
                      "Category ID": "174939",
                      "Buy It Now price": 59.99
                    },
                    {
                      "Title": "Levi’s 501 Jeans 1990s Button Fly 34x32",
                      "Category ID": "11483",
                      "Buy It Now price": 44.99
                    }
                  ]
                }
              }
            }
          },
          "400": { "description": "Missing required query parameters." }
        }
      }
    },
    "/export_csv": {
      "get": {
        "summary": "Generate and download complete eBay-ready CSV",
        "operationId": "export_csv",
        "parameters": [
          {
            "name": "photos_per_item",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer",
              "minimum": 1,
              "maximum": 12,
              "example": 4
            },
            "description": "Number of photos per listing (1–12)."
          },
          {
            "name": "condition",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "enum": ["new", "preowned", "parts"],
              "example": "new"
            },
            "description": "Item condition (new, preowned, or parts)."
          }
        ],
        "responses": {
          "200": {
            "description": "Returns downloadable CSV file with all listings (comma-separated photo URLs).",
            "headers": {
              "Content-Disposition": {
                "schema": {
                  "type": "string",
                  "example": "attachment; filename=eBay-listings.csv"
                }
              }
            },
            "content": {
              "text/csv": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              }
            }
          },
          "400": { "description": "Missing parameters." },
          "500": { "description": "CSV generation failed or incomplete analysis." }
        }
      }
    }
  },
  "x-chatgpt": {
    "actions": [
      {
        "name": "preview_csv",
        "description": "Preview analyzed listings before generating the full CSV file.",
        "parameters": {
          "photos_per_item": {
            "type": "integer",
            "description": "Number of photos per product item (1–12).",
            "example": 4
          },
          "condition": {
            "type": "string",
            "enum": ["new", "preowned", "parts"],
            "description": "Item condition.",
            "example": "new"
          }
        }
      },
      {
        "name": "export_csv",
        "description": "Generate and download the complete eBay-compliant CSV file.",
        "parameters": {
          "photos_per_item": {
            "type": "integer",
            "description": "Number of photos per product item (1–12).",
            "example": 4
          },
          "condition": {
            "type": "string",
            "enum": ["new", "preowned", "parts"],
            "description": "Item condition.",
            "example": "new"
          }
        }
      }
    ]
  }
}
